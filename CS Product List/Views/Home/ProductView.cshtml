@{
}

<form asp-method="product" asp-action="ProductView"></form>

@{
    foreach (Product p in Model)
    {
        <a class="nav-link text-dark" asp-action="ProductDetails" asp-route-id="@p.Id">
            <div class="card">
                <p>@p.Name</p>
            </div>
        </a>
    }
}